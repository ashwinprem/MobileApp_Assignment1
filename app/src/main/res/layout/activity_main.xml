<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E8F5E9"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Dark Green Header -->
<TextView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="@string/mortgage_calculator"
    android:background="#1B5E20"
    android:textColor="#FFFFFF"
    android:padding="16dp"
    android:gravity="center"
    android:textSize="20sp" />

    <!-- Mortgage Principal Amount -->
<EditText
    android:id="@+id/etPrincipal"
    android:layout_width="320dp"
    android:layout_height="48dp"
    android:autofillHints=""
    android:hint="@string/enter_principal"
    android:inputType="numberDecimal"
    android:layout_marginTop="20dp"
    android:backgroundTint="#388E3C"
    android:textColor="#1B5E20"
    android:textColorHint="#1B5E20" />

    <!-- Interest Rate (Spinner dropdown) -->
<TextView
    android:layout_width="320dp"
    android:layout_height="wrap_content"
    android:text="@string/interest_rate"
    android:textColor="#1B5E20"
    android:layout_marginTop="10dp"
    android:gravity="center" />

<Spinner
    android:id="@+id/spinnerInterestRate"
    android:layout_width="320dp"
    android:layout_height="48dp"
    android:backgroundTint="#388E3C"
    android:layout_marginTop="10dp" />

    <!-- Amortization Period (Spinner dropdown) -->
<TextView
    android:layout_width="320dp"
    android:layout_height="wrap_content"
    android:text="@string/amortization_period"
    android:textColor="#1B5E20"
    android:layout_marginTop="10dp"
    android:gravity="center" />

<Spinner
    android:id="@+id/spinnerTenure"
    android:layout_width="320dp"
    android:layout_height="48dp"
    android:backgroundTint="#388E3C"
    android:layout_marginTop="10dp" />

    <!-- Button to Calculate EMI -->
<Button
    android:id="@+id/btnCalculate"
    android:layout_width="320dp"
    android:layout_height="wrap_content"
    android:text="@string/calculate_emi"
    android:backgroundTint="#D843"
    android:textColor="#FFFFFF"
    android:layout_marginTop="20dp"
    android:gravity="center"
    android:padding="12dp" />

</LinearLayout>
