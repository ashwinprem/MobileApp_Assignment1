<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E8F5E9"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Header -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="My Payment Results"
        android:background="#1B5E20"
        android:textColor="#FFFFFF"
        android:padding="16dp"
        android:gravity="center"
        android:textSize="20sp" />

    <!-- EMI Result -->
    <TextView
        android:id="@+id/tvEmiResult"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="32sp"
        android:textColor="#1B5E20"
        android:gravity="center"
        android:layout_marginTop="16dp" />

    <!-- Mortgage Details -->
    <TextView
        android:id="@+id/tvMortgageDetails"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Mortgage Details"
        android:textColor="#1B5E20"
        android:textSize="18sp"
        android:padding="8dp" />

    <!-- Principal -->
    <TextView
        android:id="@+id/tvPrincipalAmount"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:textColor="#000000"
        android:layout_marginTop="8dp" />

    <!-- Interest Rate -->
    <TextView
        android:id="@+id/tvInterestRate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:textColor="#000000" />

    <!-- Tenure -->
    <TextView
        android:id="@+id/tvTenure"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:textColor="#000000" />

    <!-- Payment Frequency -->
    <TextView
        android:id="@+id/tvPaymentFrequency"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:textColor="#000000" />

</LinearLayout>
